{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules"]
}
